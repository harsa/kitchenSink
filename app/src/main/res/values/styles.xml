<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.NoActionBar">
        <!-- Customize your theme here. -->

    </style>


    <style name="buttonBase">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#5e000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">0.1</item>
    </style>

    <style name="buttonBase_normal" parent="buttonBase">
        <item name="android:textSize">30dp</item>
    </style>

    <style name="buttonBase_huge" parent="buttonBase">
        <item name="android:textSize">60dp</item>
    </style>


    <style name="button_huge_red" parent="buttonBase_huge">
        <item name="android:background">@drawable/selector_button_huge_red</item>
    </style>
    <style name="button_huge_green" parent="buttonBase_huge">
        <item name="android:background">@drawable/selector_button_huge_green</item>
    </style>
    <style name="button_huge_normal" parent="buttonBase_huge">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/selector_button_huge_default</item>
    </style>

    <style name="button_normal_red" parent="buttonBase_normal">
        <item name="android:background">@drawable/selector_button_normal_red</item>
        <item name="android:shadowDy">2</item>
    </style>
    <style name="button_normal_green" parent="buttonBase_normal">
        <item name="android:background">@drawable/selector_button_normal_green</item>
        <item name="android:shadowDy">2</item>
    </style>
    <style name="button_normal_normal" parent="buttonBase_normal">
        <item name="android:textColor">#000000</item>
        <item name="android:background">@drawable/selector_button_normal_default</item>
        <item name="android:shadowDy">2</item>
    </style>

</resources>
